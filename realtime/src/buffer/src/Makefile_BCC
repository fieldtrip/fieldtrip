##############################################################################
# BORLAND FreeCommandLineTools (BCC 5.5) Makefile
##############################################################################

BCCDIR = C:/BCC55

CC = $(BCCDIR)/BIN/BCC32.EXE
AR = $(BCCDIR)/BIN/TLIB.EXE

INCPATH	 = -I. -I../pthreads-win32/include 
LIBPATH  = -L. -L../pthreads-win32/lib
LIBS 	 = -lbuffer -lm -lpthreadGC2
BINDIR	 = .

CFLAGS	 = $(INCPATH) 

##############################################################################

all: libbuffer.lib

libbuffer.lib: tcpserver.obj tcpsocket.obj tcprequest.obj clientrequest.obj dmarequest.obj cleanup.obj util.obj print.obj swap.obj extern.obj endian.obj socketserver.obj
	del libbuffer.lib
	 $(AR) libbuffer.lib +tcpserver +tcpsocket +tcprequest +clientrequest +dmarequest +cleanup +util +print +swap +extern +endian +socketserver
	 
%.obj: %.c buffer.h message.h swap.h socket_includes.h unix_includes.h
	$(CC) $(CFLAGS) -c $*.c

clean:
	del *.obj *.lib
